include ../components/layout/head.pug
    block content
        main 
            header
                //- menu
                div
                    +menu-gradient("gradient__innovation")
                    include ../components/menu/topbar.pug
                    +menu("display__none")
                    +menu-section("migas__neutral", "migas__text-neutral")
                    //- +menu-index()
            //- noticias principal
            section.media__margin.padding.padding__top-xx-large.content__center.content__max 
                h3.padding__bottom-large.primaryfont__bold Evento destacado
            section.padding__topbottom-large.box__background
                div.media__margin.padding.content__center.content__max
                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor-width", "grid__c7-c5", "tag__primary", "box__icon--date-home", "", "display__mobile", "display__none", "")
            //- filtros
            section.media__margin.padding__regular.padding__top-large.content__center.content__max
                h2.primaryfont__bold Agenda
            section.box__background
                +filter("tag__empresas", "tag__empresas-dark")
            //- eventos
            section.media__margin.padding.padding__top-large.content__center.content__max 
                h3.primaryfont__bold Todos los eventos
                p.padding__bottom-large.text-small 70 eventos

