                                div.swiper-slide
                                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor", "", "tag__primary", "box__icon--date-home", "", "display__mobile", "display__none", "")
                                div.swiper-slide
                                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor", "", "tag__primary", "box__icon--date-home", "", "display__mobile", "display__none", "")
                                div.swiper-slide
                                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor", "", "tag__primary", "box__icon--date-home", "", "display__mobile", "display__none", "")
                                div.swiper-slide
                                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor", "", "tag__primary", "box__icon--date-home", "", "display__mobile", "display__none", "")
                                div.swiper-slide
                                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor", "", "tag__primary", "box__icon--date-home", "", "display__mobile", "display__none", "")
                            div.swiper-pagination
            
            //- agenda display__mobile
            section.padding__bottom-regular.box__background.display__mobile
                div.media__margin.padding__regular.content__center.content__max
                    h3.primaryfont__bold Agenda
                div.media__margin.padding.gap.display__flex.content__center.content__max
                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor", "", "tag__primary", "box__icon--date-home", "", "display__mobile", "display__none", "")
                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor", "", "tag__primary", "box__icon--date-home", "display__desktop", "display__mobile", "display__none", "display__one")
                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor", "", "tag__primary", "box__icon--date-home","display__desktop", "display__mobile", "display__none")
                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor", "", "tag__primary", "box__icon--date-home","display__desktop", "display__mobile", "display__none")
                div.media__margin.content__center.padding.padding__top-x-large.display__mobile
                    a.btn__primary--small-color(href="www") Ver todos

            //- gastronomía 360º
            section.padding__top-xx-large.padding__bottom-large
                div.media__margin.padding__regular.content__center.content__max
                    h3.primaryfont__bold Gastronomía 360º
                +component-noticia-principal-actualidad("box__content--justify", "link__color-home", "color__text", "tag__card--grey", "", "box__img--border-rightangle", "", "display__one")
            //- noticias target desktop
            section.display__desktop
                div.media__margin.padding__regular-xtra-large.content__center.content__max.display__flex.gap
                    +component-noticia-target-actualidad("link__color-home", "tag__card--grey", "box__tag", "box__img--border-rightangle", "", "", "display__none")
                    +component-noticia-target-actualidad("link__color-home", "tag__card--grey", "box__tag--bloq2", "box__img--border-rightangle", "display__desktop", "", "display__none")
            //- noticias target mobile
            section.media__margin.content__center.padding.padding__bottom-xtra-large.display__mobile
                +component-noticia-target-actualidad("link__color-home", "tag__card--grey", "box__tag--bloq2", "", "display__desktop", "display__mobile", "", "display__one")
                div.media__margin.padding__top-large
                    a.btn__primary--small-color(href="www") Ver más
            //- form innovation
            +newsletter-form()  
        //- footer
        +footer("box__background--white")

