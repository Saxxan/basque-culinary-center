    block content
        main 
            header
                //- menu
                div
                    +menu-gradient("gradient__innovation")
                    include ../components/menu/topbar.pug
                    +menu("display__none")
                    +menu-section("migas__neutral", "migas__text-neutral")
                    //- +menu-index()
            //- noticias principal
            section.media__margin.padding.padding__top-xx-large.content__center.content__max 
                h2.padding__bottom-large.primaryfont__bold BCC Actualidad
            div.padding__bottom-large
                +component-noticia-principal-actualidad("box__content--justify", "link__color-home", "color__text-home", "tag__card--grey", "", "", "display__none", "")
            section.media__margin.padding.padding__bottom-xtra-large.content__center.content__max.display__flex.gap
                +component-noticia-target-actualidad("link__color-home", "tag__primary", "box__tag--bloq2", "", "display__desktop", "display__mobile", "display__none", "display__one")
                +component-noticia-target-actualidad("link__color-home", "tag__primary", "box__tag--bloq2", "", "display__desktop", "display__mobile", "display__none", "display__one")
                div.display__mobile
                    a.btn__primary--small-color(href="www") Ver más
            //- agenda display__desktop
            section.padding__bottom-xtra-large.box__background.display__desktop
                    div.media__margin.padding__regular.content__center.content__max 
                        h3.primaryfont__bold Agenda
                    div.media__margin.padding.content__center.content__max 
                        div.swiper.mySwiper.display__flex.content__max
                            div.swiper-wrapper
                                div.swiper-slide
                                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor", "", "tag__primary", "box__icon--date-home", "", "display__mobile", "display__none", "")
                                div.swiper-slide
                                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor", "", "tag__primary", "box__icon--date-home", "", "display__mobile", "display__none", "")
                                div.swiper-slide
                                    +component-target-garamond-complete-actualidad("btn__primary--medium-nocolor", "", "tag__primary", "box__icon--date-home", "", "display__mobile", "display__none", "")
                                div.swiper-slide
