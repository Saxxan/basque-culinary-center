                // component-noticia-principal
                +component-noticia-principal("box__content--justify", "link__color-home", "color__text-home", "", "tag__card--grey", "", "", "display__innovation", "display__button", "", "")
            
            section.media__margin.padding.padding__bottom-xtra-large.content__center.content__max
                div.padding__bottom-large.display__flex.gap
                    // component-noticia-target-principal
                    +component-noticia-target-actualidad("link__color-home", "tag__primary", "box__tag--bloq2", "", "display__desktop", "display__mobile", "display__none", "")
