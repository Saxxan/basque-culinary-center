include ../components/column/component-img-left.pug
include ../components/column/component-noticia-principal.pug
include ../components/menu/menu-gradient.pug
include ../components/menu/menu.pug
include ../components/menu/menu-index.pug
include ../components/layout/footer.pug
include ../components/layout/head.pug
    block content
        main 
            header
                //- menu
                div
                    +menu-gradient("gradient__innovation")
                    include ../components/menu/topbar.pug
                    +menu("display__none")
                    +menu-index()
            //- noticias principal
            section.padding__regular-xx-large.box__background
                +component-noticia-principal("link__color-innovation", "color__text-innovation", "", "tag__card--grey", "box__background", "", "display__innovation", "display__button", "", "")
            //- section bcc innovation
            section.padding__regular-xx-large.content__center.content__max
                div.padding__topbottom-large
                    img(src="../src/images/cabecera-innovation.png", alt="")
                +component-img-left("box__content", "display__none", "display__one")
                div.display__mobile.padding__top-large
                    a.btn__primary--small-nocolor(href="www") Ir a la página
            //- section bcc action - order 2
            section.padding__p-bottom-large.content__center.content__max
                div.padding__topbottom-large
                    img(src="../src/images/cabecera-action.png", alt="")
                +component-img-left("box__content--right", "display__none", "display__one")
                div.display__mobile.padding__top-large
                    a.btn__primary--small-nocolor(href="www") Ir a la página
            //- section lab
            section.padding__p-bottom-xx-large.content__center.content__max
                div.padding__topbottom-large
                    img(src="../src/images/logo-LABe.png", alt="")
                +component-img-left("box__content", "display__none", "display__one")
                div.display__mobile.padding__top-large
                    a.btn__primary--small-nocolor(href="www") Ir a la página
            //- section form
            section.padding__regular-xx-large.box__background
                div.content__center.content__max.display__flex 
                    div
                        h4.primaryfont__bold.padding__bottom-regular Contacto con Innovación
                        h4.primaryfont__bold.padding__bottom-regular BASQUE CULINARY CENTER INNOVACIÓN
                        p.text-small Paseo Juan Avellino Barriola, 101 
                        p.text-small.padding__bottom-regular 20009 Donostia · San Sebastián. Ver en 
                            a.primaryfont__bold(href="www") Google Maps  
                        div.box__icon
                            img(class="svg__icon--margin" src="../src/iconos/telefono.svg#telefono" type="img/svg")
                            span.box__icon--date
                                p.text-small 943 574 500
                        div.box__icon
                            img(class="svg__icon--margin" src="../src/iconos/e-mail.svg#e-mail" type="img/svg")
                            span.box__icon--date
                                p.text-small 
                                    a(href="mailto:ndelafuente@bculibary.com") ndelafuente@bculibary.com
                    //- form
                    form(class="form" name="registration-form" id="registrationForm" method="POST" action="" role="form")
                        section
                            h4.primaryfont__bold.padding__bottom-regular Formulario
                            .form__inputs.gap__form
                                .form-floating
                                    input(type="text" name="nombre" class="form-control" id="nombre" placeholder="Nombre" required)
                                    label(for="nombre") * Nombre
                                .form-floating
                                    input(type="text" name="apellidos" class="form-control" id="apellidos" placeholder="Apellidos" required)
                                    label(for="apellidos") * Apellidos
                            .form__inputs.gap__form
                                .form-floating
                                    input(type="text" name="pais" class="form-control" id="pais" placeholder="País" required)
                                    label(for="pais") *País
                                .form-floating
                                    label(for="opciones")
                                    select(name="opciones" class="form-control") 
                                        option(selected disabled) Selecciona una opción
                                        option(value="opcion 1") Opción 1
                                        option(value="opcion 2") Opción 2
                            div
                                label(for="mensaje")
                                textarea(name="mensaje" class="content__center form-control" id="mensaje" placeholder="Mensaje") Mensaje
                                //- checkmarck
                            div.form__policity.text-small
                                label.container
                                    input(type='checkbox')
                                    span.checkmark__radio
                                p.padding__top-tiny.x-small.form__policity-text.primaryfont__bold He leído y acepto la 
                                    a.primaryfont__bold(href="www") política de privacidad 
                                
                                .submit.padding__top-regular
                                    button.btn__primary--medium-color-width Enviar datos
        //- footer
        +footer("box__background--white")    
            
        
            
    script(src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js")
    script(src="../js/accordion.js")
    script(src="../js/swiper.js")
    script(src="../js/swiper3.js")
    script(src="../js/function.js")
